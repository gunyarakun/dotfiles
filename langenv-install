#!/bin/zsh
# vim: set expandtab ts=2 sw=2 nowrap ft=sh ff=unix : */
set -e -u

export PATH=~/.pyenv/bin:~/.rbenv/bin:~/.plenv/bin:~/.nodenv/bin:${PATH}

# Python
(cd ~/.pyenv && git pull)

PYTHON_CONFIGURE_OPTS="--enable-shared"
if [ ! -d ~/.pyenv/versions/3.12.1 ]; then
  pyenv install 3.12.1
fi
pyenv rehash

# ruby
(cd ~/.rbenv && git pull)
(cd ~/.rbenv/plugins/ruby-build && git pull)
if [ ! -d ~/.rbenv/versions/3.2.2 ]; then
  rbenv install 3.2.2
fi
echo 'gem: --no-ri --no-rdoc' >> ~/.gemrc # no document
rbenv rehash

# Node.js
(cd ~/.nodenv && git pull)
(cd ~/.nodenv/plugins/node-build && git pull)
if [ ! -d ~/.nodenv/versions/20.10.0 ]; then
  nodenv install 20.10.0
fi
nodenv rehash
