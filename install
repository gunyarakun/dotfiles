#!/bin/sh
# vim: set expandtab ts=2 sw=2 nowrap ft=sh ff=unix : */
set -u

uname=`uname`

# install basic module
case $uname in
  Darwin)
    # TODO: check whether Xcode is installed or not
    if ! command -v brew &> /dev/null; then
      echo "Install Homebrew first"
      open "https://brew.sh/"
      exit
    fi
    brew update
    brew install \
      vim \
      ffmpeg \
      git zsh \
      zlib openssl sqlite libxml2 libxslt \
      gdbm readline \
      bison libyaml ncurses \
      go \
      ghq peco \
      fig \
      ripgrep rga \
      lsd \
      fd \
      coreutils bvi jq gron ngrep wrk bat autossh \
      tokei \
      direnv jenv \
      starship \
      exiftool \
      git-delta \
      imagemagick \
      rust \
      dust diskonaut \
      stern k9s \
      dog \
      cheat navi tldr \
      xsv \
      pastel \
      youtube-dl yt-dlp \
      rclone \
      mpv \
      wezterm
    ;;
  Linux)
    if [ -f /etc/debian_version ]; then
      sudo apt-get update
      sudo apt-get install aptitude
      sudo aptitude install \
        build-essential git zsh curl file sudo vim \
        zlib1g-dev libssl-dev libsqlite3-dev sqlite3 libxml2-dev libxslt1-dev \
        libgdbm-dev libbz2-dev libreadline-dev \
        bison libreadline6-dev libyaml-dev libncurses5-dev \
        bvi jq gron ngrep autossh \
        direnv jenv \
        imagemagick \
        ripgrep \
        rclone \
        mpv
      sudo aptitude install language-pack-en language-pack-ja || echo "not found language packs"

      if [ ! -d /home/linuxbrew ]; then
        /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
        echo 'eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"' >> $HOME/.zprofile
        eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
      fi
      eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
      brew update
      ulimit -n 4096 # ffmpeg installs many packages so we need many file descriptors
      brew install \
        ffmpeg \
        ghq peco \
        fig \
        starship \
        exiftool \
        jenv
      # TODO: install fd/wrk/bat
      # TODO: install tokei
      # TODO: install git-delta
      # TODO: install cheat/navi/tldr
      # TODO: install dust/diskonaut
      # TODO: install xsv
      # TODO: install pastel
      # TODO: install rga (ripgrep-all)
    elif [ -f /etc/redhat-release ]; then
      sudo yum update
      sudo yum groupinstall "Development Tools"
      sudo yum install git zsh
    fi
    ;;
  FreeBSD)
    echo "To be implemented"
    exit 1
    ;;
esac
