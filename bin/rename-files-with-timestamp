#!/usr/bin/ruby
require 'fileutils'

Dir.glob("**/*") do |f|
  ext = File.extname(f).downcase.intern
  case ext
  when :'.mp4', :'.mov'
    stat = File::Stat.new(f)
    mtime = stat.mtime

    dir = File.dirname(f)
    name = File.basename(f)

    datetime_prefix = mtime.strftime('%Y%m%d-%H%M%S-')

    unless name.start_with?(datetime_prefix)
      File.rename(File.join(dir, name), File.join(dir, datetime_prefix + name))
    end
  end
end
